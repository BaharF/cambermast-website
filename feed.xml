<?xml version="1.0" encoding="utf-8"?>
<!-- All site posts (blog podcast or others) -->
{%- assign feeditems = site.data.rss-main -%}
<feed xmlns="http://www.w3.org/2005/Atom">
    <!-- Required -->
    <!-- add a / to the end, but if you already have that, remove it. -->
    <id>{{feeditems.id}}/</id>
    <title>{{feeditems.title}}</title>
    <updated>{{- site.time | date_to_xmlschema -}}</updated>
    <!-- Recommended -->
    <author>
        <name>
            {{- feeditems.author -}}
        </name>
    </author> 
    <link href="{{- feeditems.link_rel | absolute_url -}}" rel="self" type="application/atom+xml"/>
    <link href="{{- "" | absolute_url -}}" rel="alternate" type="text/html" />
    <!-- Optional -->
    <category term="business" />
    <contributor>
        <name>{{feeditems.contributor}}</name>
    </contributor>
    <generator uri="{{feeditems.generator_uri}}" version="{{feeditems.generator_version}}">
        {{- feeditems.generator_name -}}
    </generator>
    <icon>
        {{- feeditems.icon | absolute_url -}}
    </icon>
    <logo>
        {{- feeditems.logo | absolute_url -}}
    </logo>
    <rights>
        {{- feeditems.rights -}}
    </rights>
    <subtitle>
        {{- feeditems.subtitle | strip_html | lstrip | rstrip -}}
    </subtitle>
    <!-- Entries -->
    {%- for post in site.posts limit: 20 -%}
    <entry>
        <id>{{- post.url | absolute_url -}}</id>
        <title>{{- post.title -}}</title>
        <updated>{{- post.date | date_to_xmlschema -}}</updated>
        <author>
            <name>
                {%- if post.author -%}
                    {{- post.author -}}
                {%- else -%}
                    {{- feeditems.author -}}
                {%- endif -%}
            </name>
        </author>
        <content>{{- post.content | strip_html | lstrip | rstrip -}}</content>
        <link href="{{- post.url | absolute_url -}}"/>
        <summary>
            {%- if post.excerpt -%}
                {{- post.excerpt | strip_html | lstrip | rstrip -}}
            {%- endif -%}
        </summary>
        <!-- a single category like "Jekyll Update" is actually two categories. Right now, taking the first word. -->
        <category term="{{- post.categories[0] -}}" />
        <!-- there is no post.contribur(s) by default, so just show the author. If you add that, modify the code. -->
        <contributor>
            <name>
                {%- if post.author -%}
                    {{- post.author -}}
                {%- else -%}
                    {{- feeditems.author -}}
                {%- endif -%}
            </name>
        </contributor>
        <!-- there is no published date, so just use the default post date. -->
        <published>{{- post.date | date_to_xmlschema -}}</published>
        <!-- there are no rights for a post by default, so use the default for the site. -->
        <rights>
            {{- feeditems.rights -}}
        </rights>
        <!-- If you have a <source>, add it below. -->
    </entry>
    {%- endfor- %}
</feed>